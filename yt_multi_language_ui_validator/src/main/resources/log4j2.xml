<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
   <Property name="logs.dir">${sys:logs.dir:-logs}</Property>
    <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level [%X{logFileName}] %msg%n</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}" charset="UTF-8"/>
    </Console>

    <Routing name="RoutingAppender">
      <Routes pattern="${ctx:logFileName}">
        <!-- per-test route when ctx:logFileName is set -->
        <Route>
          <RollingFile name="RollingFile-${ctx:logFileName}"
                       fileName="${logs.dir}/${ctx:logFileName:-default}.log"
                       filePattern="${logs.dir}/archive/${ctx:logFileName:-default}-%d{yyyy-MM-dd-HH-mm}.log"
                       append="true">
            <PatternLayout pattern="${pattern}" charset="UTF-8"/>
            <Policies>
              <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
          </RollingFile>
        </Route>

        <!-- explicit fallback (used when ctx:logFileName is NOT present) -->
        <Route key="default">
          <RollingFile name="DefaultFile"
                       fileName="${logs.dir}/default.log"
                       filePattern="${logs.dir}/archive/default-%d{yyyy-MM-dd-HH-mm}.log.gz"
                       append="true">
            <PatternLayout pattern="${pattern}" charset="UTF-8"/>
            <Policies>
              <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
          </RollingFile>
        </Route>
      </Routes>
    </Routing>

  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RoutingAppender"/>
    </Root>
  </Loggers>
</Configuration>
